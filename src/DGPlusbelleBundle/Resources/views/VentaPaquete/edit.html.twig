{% extends 'DGPlusbelleBundle:Layout:layout.html.twig' %}

{% block contenido -%}
    <div class="panel panel-default">
        <div class="panel-heading"><p>Modificar nueva venta</p></div>
        <div class="panel-body">
        {#{{ form(edit_form) }}#}
        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
        <div class="row">
        
	        <div class="col-md-3" >
                    {{ form_row(edit_form.paciente)}}
                </div>
                <div class="col-md-3" >
                    {{ form_row(edit_form.empleado)}}
		</div>
                <div class="col-md-2" >
                    {{ form_row(edit_form.paquete)}}
                </div>
		{#<div class="form-group col-md-2" >
                    {{ form_row(edit_form.fechaVenta)}}
                </div>#}
                <div class="form-group col-md-1" >
                  {{ form_row(edit_form.cuotas)}} 
                </div> 
                <div class="form-group col-md-1" >
                  {{ form_row(edit_form.descuento)}} 
                </div>  
                <div class="form-group col-md-3" >
                  {{ form_row(edit_form.sucursal)}} 
                </div>  
            </div>
        <div class="form-grouphide"> 
{#            <a href="{{ path('admin_ventapaquete') }}" class="btn btn-default btn-sm" id="cancelarModificar">Cancelar</a>#}
            <a href="{{ path('admin_historial_consulta',{'id':id})}}" class="btn btn-default btn-sm" id="cancelarModificar">Cancelar</a>
            {{ form_widget(edit_form._token) }}
            {{ form_widget(edit_form.submit) }}
        </div>
        </div>
            
    </div>  
            {{ form_end(edit_form) }}     

{% endblock %}

{% block javascritp_step %} 

<script>
        //Accion cancelar del boton modificar
        $("#cancelarModificar").click(function(){
            $("#editFormContainer").hide();
            return false;
        });
        $('#dgplusbellebundle_ventapaquete_fechaVenta').daterangepicker({
            singleDatePicker: true,
            showDropdowns: false,
            locale: {
                format: 'YYYY-MM-DD'
            },
        }); 
        
        
 </script>
 {% endblock %}