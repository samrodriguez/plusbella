{% block contenido -%}
    <div class="panel panel-default">
        <div class="panel-heading"><p>Registrar nueva venta</p></div>
        <div class="panel-body">
            {# {{ form(form) }} #}
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="row">
        
	        <div class="col-md-6" >

	        	{{ form_row(form.paciente)}}
		
			</div>

			<div class="col-md-6" >
	        
	        	{{ form_row(form.empleado)}}
		
			</div>

			
			<div class="col-md-6" >
		    	{{ form_row(form.paquete)}}
		    </div>			
			<div class="form-group col-md-6" >
                            
				{{ form_row(form.fechaVenta)}}
                            
			</div>

		

    </div>

	
		<br>

		<div class="modal-footer">
                    <a href="{{ path('admin_ventapaquete') }}" class="btn btn-default">
                        Regresar a la lista
                    </a>
                    {{ form_widget(form.submit) }}
                </div>
	        
        
	

		{{ form_end(form) }}
        </div>
    </div>
    <br> 
{% endblock %}
{% block javascritp_step %} 
<script>
  $(function() {
    $( "#dgplusbellebundle_ventapaquete_fechaVenta" ).datepicker();
  });
  </script>
 {% endblock %}