{% extends 'DGPlusbelleBundle:Layout:general.html.twig' %}

{% block contenido -%}
    <h1>Comision</h1>

    <table  id = "datable" class="table table-bordered table-hover display dt-responsive">
        <tbody>
            <tr>
               {# <th>Id</th> #}
              {#  <td>{{ entity.id }}</td> #}
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
            <tr>
                <th>Porcentaje</th>
                <td>{{ entity.porcentaje }}</td>
            </tr>
            <tr>
                <th>Meta</th>
                <td>{{ entity.meta }}</td>
            </tr>
            <tr>
                <th>Empleado</th>
                <td>{{ entity.empleado }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ entity.estado }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_comision') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_comision_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
    
<script type="text/javascript">
            $(document).ready(function() {
                    $('#datable').DataTable( {
                            "scrollCollapse": true,
                            "paging":         true
                    } );
            } );
    </script>           
{% endblock %}
