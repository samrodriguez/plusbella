{% extends 'DGPlusbelleBundle:Layout:general.html.twig' %}

{% block contenido -%}
    
    <div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"<h1>Nuevo producto</h1></div>
  <div class="panel-body">
  {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="row">
        <div class="col-xs-12 col-sm-6">
        {{ form_row(form.nombre) }}
        {{ form_row(form.costo) }}
        {{ form_row(form.fechaCompra) }}
        {{ form_row(form.fechaVencimiento) }}
        {{ form_row(form.estado) }}
        {{ form_row(form.categoria) }}
      
        
        </div>
    </div>
    <div class="row">
         <div class="col-xs-12 col-sm-12">
             <div class="modal-footer">
                <a href="{{ path('admin_producto') }}" class="btn btn-default">Regresar al listado</a>
                {{ form_widget(form.submit) }}
              </div>
            
        </div>
    </div>
    {{ form_end(form) }}
  </div>


</div>        

{% endblock %}
