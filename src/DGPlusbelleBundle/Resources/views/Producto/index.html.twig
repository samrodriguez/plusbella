{% extends 'DGPlusbelleBundle:Layout:general.html.twig' %}

{% block contenido -%}
    <h1>Productos</h1>

    <table id = "datable" class="table table-bordered table-hover display dt-responsive">
        <thead>
            <tr>
                <th>#</th>
                <th>Categoria</th>
                <th>Nombre</th>
                <th>Costo $</th>
                <th>Fechacompra</th>
                <th>Fechavencimiento</th>
                <th>Estado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_producto_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.categoria }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.costo }}</td>
                <td>{% if entity.fechaCompra %}{{ entity.fechaCompra|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaVencimiento %}{{ entity.fechaVencimiento|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.estado }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_producto_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_producto_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
             <a href="{{ path('admin_producto_new') }}" class="btn btn-success"> Crear nuevo producto</a>
             
             
     <script type="text/javascript">
            $(document).ready(function() {
                    $('#datable').DataTable( {
                            "scrollCollapse": true,
                            "paging":         true
                    } );
            } );
    </script>                
    {% endblock %}
