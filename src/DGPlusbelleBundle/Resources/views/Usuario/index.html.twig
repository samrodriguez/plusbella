            <div class="panel-body hide" id="addFormContainer">
              {% include 'DGPlusbelleBundle:Usuario:new.html.twig' %}
            </div><!-- /.panel-body -->

            <div class="panel-body hide" id="editFormContainer">
     
            </div><!-- /.panel-body -->
    
    
   <!--     <a href="{{ path('admin_empleado_new') }}" class="btn btn-success"> Crear nuevo empleado</a>  -->

    <table id = "datatables1" class="table table-bordered table-hover display dt-responsive" style="margin-top: 30px">
        <thead>
            <tr>
                <th>No.</th>
                <th>Nombre de empleado</th>
                <th>Usuario</th>
                {#<th>Password</th>
                <th>Salt</th>#}
                <th>Estado</th>
                {#<th>Actions</th>#}
            </tr>
        </thead>
        <tbody>
        {% for key, entity in entities %}
            <tr id="{{entity.id}}">
                <td>
                    {{key+1}}
                </td> 
                <td>{{ entity.persona|upper }}</td>
                <td>{{ entity.username|upper }}</td>
                {#<td>{{ entity.password }}</td>
                <td>{{ entity.salt }}</td>#}
                <td>{%if entity.estado==1 %}
                        Activo
                    {% else %}
                        Inactivo
                    {% endif %}
                </td>
                {#<td>
                <ul>
                    <li>
                        <a href="{{ path('admin_usuario_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_usuario_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>#}
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div><!-- /.panel -->

