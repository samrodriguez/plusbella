        <script>
            $(document).ready(function(){
                var fecha = $('#fecha').val();
                var datepickerInicio = $('#fecha').data('Zebra_DatePicker');
                datepickerInicio.update({
                    format: 'm-Y',
                    onSelect: function(){
                        $('#contenedorEmpleados').html('');
                        fecha = $('#fecha').val();
                        var url = "{{ path('admin_empleado_progreso_venta_ajax') }}";
                        url+="?fecha="+fecha;
                        $('#contenedorEmpleados').load(url);        
                    }
                });  
            });//Fin document ready
        </script>
