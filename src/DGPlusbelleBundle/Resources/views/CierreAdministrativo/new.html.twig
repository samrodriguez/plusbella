{% extends '::base.html.twig' %}

{% block body -%}
<div class="panel panel-default">
  <!-- Default panel contents -->
<div class="panel-heading"><p>Nuevo cierre administrativo</p></div>
<div class="panel-body">

    {{ form_start(form) }}
    {{ form_errors(form) }}
        <div class="col-md-2">
            {{ form_row(form.fecha) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.horaInicio) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.horaFin) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.motivo) }}
        </div>
         
        {#{{ form_row(form.estado) }}#}
  
 
    
        <div class="form-grouphide col-sm-9">
            <a href="{{ path('admin_cierreadministrativo') }}" class="btn btn-default  btn-sm" id="cancelarNuevo">Cancelar</a>
            {{ form_widget(form.submit) }}
        </div>
   
    {{ form_end(form) }}
    </div>
</div>    
        
{% endblock %}
