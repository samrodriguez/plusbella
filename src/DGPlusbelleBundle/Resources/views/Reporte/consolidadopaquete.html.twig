    </div><!-- /.panel -->    
       
</div>
   

     
  
   {% endblock %}
   
    
       
  {% block javascripts_step %}
      
       <script>
        $(document).ready(function(){
                
            
               
        var anioInicioUser = $('#fecha-inicio').val();
        var aniofinUser = $('#fecha-fin').val();
        var url = "{{ path('admin_reporte_consolidado_grafico') }}";
            if(anioInicioUser!=""){
                if(aniofinUser!=""){
                    url+="?anioInicioUser="+anioInicioUser+"&anioFinUser="+aniofinUser;
                    $('#contenedorGrafico').load(url);
                }
            }       
            
            
            
            
            $('#fecha-inicio').Zebra_DatePicker({
                format: 'Y-m-d',
                onSelect: function(){
                    $('#fecha-fin').val('');
                    anioInicioUser = $('#fecha-inicio').val();
                    
                },
                onClear: function(){
                    $('canvas').hide();
                },
                pair: $('#fecha-fin')
            });
            
            $('#fecha-fin').Zebra_DatePicker({
                direction: 1,
                onSelect: function(){
                    if(anioInicioUser!==""){
                        var aniofinUser = $('#fecha-fin').val();
                        var url = "{{ path('admin_reporte_consolidado_grafico') }}";
                        url+="?anioInicioUser="+anioInicioUser+"&anioFinUser="+aniofinUser;
                        $('#contenedorGrafico').load(url);
                        //myLineChart.update();    
                    }
                },
            });
                      
    });//Fin document ready
        
        </script>

    {% endblock %} 
