                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Parametros</th>
              {#  <th>Acciones</th>#}
            </tr>
        </thead>
        <tbody>
        {% for key, entity in entities %}
            <tr id="{{entity.id}}">
             {# <td>{{ entity.idpac }}</td>  #}
                <td>
                    {{key+1}}
                </td> 
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>
                    
                    {% for key, parametro in parametros 
                       if entity.id == parametro.plantilla.id %}
                            {% set long =  parametro|length  %}   
                            {{ parametro.nombre }}{% if key + 1 == long%}. {% else %}, {% endif %}
                    {% endfor %}    
