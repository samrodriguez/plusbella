{% extends 'DGPlusbelleBundle:Layout:general.html.twig' %}

{% block contenido -%}
    <h1>Empleado</h1>

    <table id = "datable" class="table table-bordered table-hover display dt-responsive">
        <tbody>
            <tr>
              {#  <th>Id</th> #}
              {#   <td>{{ entity.id }}</td> #}
            </tr>
            <tr>
                <th>Cargo</th>
                <td>{{ entity.cargo }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ entity.foto }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_empleado') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_empleado_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
    
 <script type="text/javascript">
            $(document).ready(function() {
                    $('#datable').DataTable( {
                            "scrollCollapse": true,
                            "paging":         true
                    } );
            } );
    </script>           
{% endblock %}
