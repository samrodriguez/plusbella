                {% block alert -%}
                    {% if error %}
                        <div style="color:red;margin-bottom: 20px;">{{ error.message }}</div>
                    {% endif %}
                {% endblock %}    
            <div class="input-group input-group-in">
                <span class="input-group-addon"><i class="icon-user"></i></span>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username" />
            </div>
          </div><!-- /.form-group -->
          <div class="form-group">
            <div class="input-group input-group-in">
              <span class="input-group-addon"><i class="icon-lock"></i></span>
              {#<input name="passwd" id="passwd" class="form-control" placeholder="Password" type="password">#}
              <input class="form-control" type="password" id="password" name="_password" placeholder="Password"/>
            </div>
          </div><!-- /.form-group -->
          <div class="form-group clearfix">
            <div class="animated-hue pull-right">
              <button id="btnSignin" type="submit" class="btn btn-primary">Iniciar sesi√≥n</button>
            </div>
          </div><!-- /.form-group -->
          <hr>
        </form><!-- /#signinForm -->
      </div><!-- /.tab-pane -->

     
    </div><!-- /.tab-content -->
