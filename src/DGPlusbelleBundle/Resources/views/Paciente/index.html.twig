{% extends 'DGPlusbelleBundle:Layout:general.html.twig' %}

{% block contenido -%}
    <h1>Paciente list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dui</th>
                <th>Estadocivil</th>
                <th>Sexo</th>
                <th>Ocupacion</th>
                <th>Lugartrabajo</th>
                <th>Fechanacimiento</th>
                <th>Referidopor</th>
                <th>Personaemergencia</th>
                <th>Telefonoemergencia</th>
                <th>Estado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_paciente_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.dui }}</td>
                <td>{{ entity.estadoCivil }}</td>
                <td>{{ entity.sexo }}</td>
                <td>{{ entity.ocupacion }}</td>
                <td>{{ entity.lugarTrabajo }}</td>
                <td>{% if entity.fechaNacimiento %}{{ entity.fechaNacimiento|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.referidoPor }}</td>
                <td>{{ entity.personaEmergencia }}</td>
                <td>{{ entity.telefonoEmergencia }}</td>
                <td>{{ entity.estado }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_paciente_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_paciente_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_paciente_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
