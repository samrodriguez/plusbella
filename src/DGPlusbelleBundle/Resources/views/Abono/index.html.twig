{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Abono list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Monto</th>
                <th>Descripcion</th>
                <th>Fechaabono</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_abono_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.monto }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{% if entity.fechaAbono %}{{ entity.fechaAbono|date('Y-m-d') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_abono_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_abono_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_abono_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
